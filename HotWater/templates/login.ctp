<!-- css: css/loginbox.css -->
<div id="loginbox">
	<div class="form-group"><i class="serverlogo fas fa-server"></i><h2 class="form-head">{title}</h2></div>
	<div class="form-group"><span class="fas fa-user-secret"></span><input type="text" name="userid" id="userid" placeholder="User"></input></div>	
	<div class="form-group"><span class="fas fa-lock"></span><input type="password" name="password" id="password" placeholder="Password"></input></div>
	<div class="form-group"><span class="fas fa-redo"></span><input type="text" name="otp" id="otp" placeholder="OTP" maxlength="6"></input></div>
	<div class="form-group"><button id="btlogin">Log In</button></div>
</div>